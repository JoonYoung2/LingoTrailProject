<%- include("../default/header") %>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<style>
	div {
		width : 100%;
		text-align: center;
	  	padding: 20px;
	}

	input[type=text]{
	  	width: 25%;
	  	padding: 15px 30px;
	  	margin: 5px 0;
	  	display: inline-block;
	  	border: 1px solid #ccc;
	  	border-radius: 12px;
	  	box-sizing: border-box;
	  	background-color: #FAFAFA;
	  	font-weight: bold;
	  	font-size: 15px;
	}

	input[type=password]{
	  	width: 25%;
	  	padding: 15px 30px;
	  	margin: 5px 0;
	  	display: inline-block;
	  	border: 1px solid #ccc;
	  	border-radius: 12px;
	  	box-sizing: border-box;
	  	background-color: #FAFAFA;
	  	font-weight: bold;
	  	font-size: 15px;
	}

	input[type=submit] {
	  	width: 25%;
	  	background-color: #00a0ff;
	  	color: white;
	  	padding: 10px 20px;
	  	margin: 10px 0;
	  	border: none;
	  	border-radius: 12px;
	  	cursor: pointer;
	  	box-shadow:
    		inset 2px 2px 3px rgba(255, 255, 255, 0.6),
    		inset -2px -2px 3px rgba(0, 0, 0, 0.6);
		font-weight: bold;
	  	font-size: 16px;
	}

	input[type=submit]:hover {
	  	background-color: #00b2ff;
	}
	
	a {
		text-decoration: none;
		color: gray;
		font-weight: bold;
	}
</style>
</head>
<body>	
	<div>
		<% if(userId === undefined) { %>
			<form action="/member/login.do" method="post">
				<h2>로그인</h2>
				<input type="text" id="id" name="id" placeholder="이메일 또는 아이디"><br>
				<input type="password" id="pw" name="pw" placeholder="비밀번호" ><br>
				<input type="submit" value="로그인"><br>
				회원이 아니라면? <a href="/member/register">가입하기</a>
			</form>
		<% } else { %>
			
		<% } %>
  	</div>
</body>
</html>