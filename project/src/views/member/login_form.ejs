<%- include("../default/header") %>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<style>
	

	input[type=text]{
	  	width: 25%;
	  	padding: 12px 30px;
	  	margin: 5px 0;
	  	display: inline-block;
	  	border: 1px solid #ccc;
	  	border-radius: 12px;
	  	box-sizing: border-box;
	  	background-color: #FAFAFA;
	  	font-weight: bold;
	  	font-size: 15px;
	}

	input[type=password]{
	  	width: 25%;
	  	padding: 12px 30px;
	  	margin: 5px 0;
	  	display: inline-block;
	  	border: 1px solid #ccc;
	  	border-radius: 12px;
	  	box-sizing: border-box;
	  	background-color: #FAFAFA;
	  	font-weight: bold;
	  	font-size: 15px;
	}

	input[type=submit] {
	  	width: 25%;
	  	background-color: #00a0ff;
	  	color: white;
	  	padding: 12px 30px;
	  	margin: 10px 0;
	  	border: none;
	  	border-radius: 12px;
	  	cursor: pointer;
	  	box-shadow:
    		inset 2px 2px 3px rgba(255, 255, 255, 0.6),
    		inset -2px -2px 3px rgba(0, 0, 0, 0.6);
		font-weight: bold;
	  	font-size: 16px;
	}

	input[type=submit]:hover {
	  	background-color: #00b2ff;
	}	
	
</style>
</head>
<body>	
	<div class="header">
		<div>
		<% if(userId === undefined) { %>
			<form action="/member/login.do" method="post">
				<h2>LOGIN</h2>
				<input type="text" id="id" name="id" placeholder="EMAIL OR ID"><br>
				<input type="password" id="pw" name="pw" placeholder="PASSWORD" ><br>
				<input type="submit" value="LOGIN"><br>
				<input type="hidden" value="<%=game%>" name="game">
				회원이 아니라면? <a href="/member/register">REGISTER</a>
			</form>
		<% } else { %>
			
		<% } %>
		</div>
  	</div>
</body>
</html>