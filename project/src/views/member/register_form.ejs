<%- include("../default/header") %>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<style>
	div {
		width : 100%;
		text-align: center;
	  padding: 20px;
	}

	input[type=text]{
	  	width: 25%;
	  	padding: 12px 30px;
	  	margin: 5px 0;
	  	display: inline-block;
	  	border: 1px solid #ccc;
	  	border-radius: 12px;
	  	box-sizing: border-box;
	  	background-color: #FAFAFA;
	  	font-weight: bold;
	  	font-size: 15px;
	}
	
	input[type=password]{
	  	width: 25%;
	  	padding: 12px 30px;
	  	margin: 5px 0;
	  	display: inline-block;
	  	border: 1px solid #ccc;
	  	border-radius: 12px;
	  	box-sizing: border-box;
	  	background-color: #FAFAFA;
	  	font-weight: bold;
	  	font-size: 15px;
	}

	input[type=submit] {
	  	width: 25%;
	  	background-color: #00a0ff;
	  	color: white;
	  	padding: 12px 30px;
	  	margin: 10px 0;
	  	border: none;
	  	border-radius: 12px;
	  	cursor: pointer;
	  	box-shadow:
    		inset 2px 2px 3px rgba(255, 255, 255, 0.6),
    		inset -2px -2px 3px rgba(0, 0, 0, 0.6);		
		font-weight: bold;
	  	font-size: 16px;
	}

	input[type=submit]:hover {
	  	background-color: #00b2ff;
	}
	
	label {
		font-weight: bold;
		color: #6E6E6E;
		display: inline-block; /* 인라인 블록 요소로 변경 */
    width: 8%; /* 라벨의 너비를 조정하여 간격을 설정 */
    text-align: center; /* 라벨을 오른쪽 정렬로 설정 */
    padding-right: 0; /* 라벨과 입력 필드 사이의 간격을 조절 */
		margin-bottom: 40px;
	}

	#lt {
		font-weight: bold;
		color: #6E6E6E;
		border: 1px solid #ccc;
	  	border-radius: 12px;
		text-align: center;
		margin: 5px 0;
		font-size: 15px;
		width: 290px;
		height: 40px;
	}
</style>
</head>
<body>
	<div>
		<% if(userId === undefined) { %>
			<form action="/member/register.do" method="post">
				<h2>회원 가입하기</h2>
				<label>ID</label><input type="text" id="id" name="id" placeholder="6글자 이상"><br>
				<label>NAME</label><input type="text" id="name" name="name" placeholder=""><br>
				<label>EMAIL</label><input type="text" id="email" name="email" placeholder="Example) abc@lingotrail.com"><br>
				<label>PASSWORD</label><input type="password" id="pw" name="pw" placeholder="영어, 숫자, 특수문자 모두 포함(10글자 이상)"><br>
				<input type="submit" value="REGISTER">
			</form>
		<% } %>
  	</div>
</body>
</html>