<%- include("../default/header") %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">

<style>
    .h2 {
        text-align: center;
        margin: 5%;
    }

    .form-section {
        display: flex;
        justify-content: center;
    }

    .form-label {
        display: flex;
        justify-content: center;
        font-weight: bold;
        margin-bottom: 20px;
        width: 500px;
        flex-shrink: 0;
    }

    .form-input {
        display: flex;
        justify-content: center;
        margin: 0 auto;
        width: 50%;
        border: 1px solid #ccc;
        border-radius: 5px;
        margin-bottom: 20px;
    }

    .form-textarea {
        display: flex;
        justify-content: center;
        margin: 0 auto;
        width: 100%;
        border: 1px solid #ccc;
        border-radius: 5px;
        margin-bottom: 20px;
    }

    .form-submit {
        margin-top: 10px;
        display: flex;
        justify-content: center;
    }

    .custom-btn {
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #CFF4FC;
        font-weight: 600;
        color: black;
    }

</style>

<title>게시글 작성</title>

    <h2 class="h2">게시글을 작성하세요</h2>

    <div class="form-section">
        <form action="/board/submit" method="post">
            <div class="form-group">
                <label class="form-label" for="title">제목</label>
                <input class="form-input" type="text" id="title" name="title" required>
            </div>
            <div class="form-group">
                <label class="form-label" for="content">내용</label>
                <textarea class="form-textarea" id="content" name="content" rows="5" maxlength="500" required></textarea>
            </div>
            <div class="form-group">
                <label class="form-label" for="author">작성자</label>
                <input class="form-input" type="text" id="author" name="author" required>
            </div>

            <div class="form-submit">
                <button class="btn custom-btn" type="submit" style="margin-bottom: 20%;">Submit</button>
            </div>
        </form>
    </div>