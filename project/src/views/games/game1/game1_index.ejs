<%- include("../../default/header") %>
<title>PHOTO 맞추기</title>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">

<style>
    .h2 {
      height: 10%;
      width: 50%;
      margin: 5% auto;
      display: flex;
      justify-content: center;
      align-items: center;
      border-radius: 10px;
      background-color: CFF4FC;
    }
  
    .game1-photo {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 300px;
      margin-bottom: 20px;
    }
  
    .centered-content {
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .custom-btn {
    width: 200px;
    background-color: #CFF4FC;
    font-weight: 600;
    color: black;
    }

    .custom-form {
      margin-left: 5%;
      display: flex;
      justify-content: center;
      align-items: center;
    }
  
  </style>
  
  <h2 class="h2">PHOTO 맞추기 게임</h2>
  
  <div class="d-flex flex-wrap justify-content-center"> 

  <div class="centered-content">
    <img src="/static/game1_files/곰탱이.png" class="game1-photo" alt="Question Image">
    <a href="/game1/start"><button class="btn custom-btn">랜덤 시작하기</button></a>
  </div>  
    <form action="/game1/start" method="post" class="custom-form">
      <select id="levelSelect" name="level" class="form-select" aria-label="Default select example" style="margin-right: 5%;">
        <option value="1">Level 1</option>
        <option value="2">Level 2</option>
        <option value="3">Level 3</option>
        <option value="4">Level 4</option>
        <option value="5">Level 5</option>
      </select>
      <button type="submit" id="startButton" class="btn custom-btn">시작하기</button>
    </form>
  </div>